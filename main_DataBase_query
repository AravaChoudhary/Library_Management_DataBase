create database if not exists final;
use final;

CREATE TABLE `book` (
    `book_id` int  NOT NULL ,
    `title` varchar(50)  NOT NULL ,
    `author_id` int  NOT NULL ,
    `genre_id` int  NOT NULL ,
    `publisher_id` int  NOT NULL ,
    `description` varchar(50)  NOT NULL ,
    `quantity` int  NOT NULL ,
    `location` varchar(50)  NOT NULL ,
    `status` varchar(50)  NOT NULL ,
    PRIMARY KEY (
        `book_id`
    ),
    INDEX `idx_author_id` (`author_id`),
    INDEX `idx_publisher_id` (`publisher_id`),
    INDEX `idx_genre_id` (`genre_id`)
);

CREATE TABLE `users` (
    `user_id` int  NOT NULL ,
    `name` varchar(20)  NOT NULL ,
    `address` varchar(60)  NOT NULL ,
    `email` varchar(50)  NOT NULL ,
    `phone_no` BIGINT  NOT NULL ,
    `user_type` varchar(50)  NOT NULL ,
    `status` varchar(50)  NOT NULL ,
    PRIMARY KEY (
        `user_id`
    )
);

CREATE TABLE `author` (
    `author_id` int  NOT NULL ,
    `author_name` varchar(50)  NOT NULL ,
    `author_bio` varchar(500)  NOT NULL ,
    PRIMARY KEY (
        `author_id`
    )
);

CREATE TABLE `borrowings` (
    `transaction_id` int  NOT NULL ,
    `user_id` int  NOT NULL ,
    `book_id` int  NOT NULL ,
    `date_issue` varchar(50)  NOT NULL ,
    `date_return` varchar(50)  NOT NULL ,
    `transaction_status` varchar(50)  NOT NULL ,
    `fine` int  NOT NULL ,
    PRIMARY KEY (
        `transaction_id`
    )
);

CREATE TABLE `publisher` (
    `publisher_id` int  NOT NULL ,
    `publisher_name` varchar(50)  NOT NULL ,
    `contact_no` BIGINT  NOT NULL ,
    `publisher_address` varchar(50)  NOT NULL ,
    PRIMARY KEY (
        `publisher_id`
    )
);

CREATE TABLE `genres` (
    `genre_id` int  NOT NULL ,
    `genre_name` varchar(50)  NOT NULL ,
    PRIMARY KEY (
        `genre_id`
    )
);

CREATE TABLE `staff` (
    `Staff_id` int  NOT NULL ,
    `name` varchar(50)  NOT NULL ,
    `role` varchar(50)  NOT NULL ,
    `username` varchar(50)  NOT NULL ,
    `password` int  NOT NULL ,
    PRIMARY KEY (
        `Staff_id`
    ),
    CONSTRAINT `uc_staff_password` UNIQUE (
        `password`
    )
);

CREATE TABLE `reservation` (
    `reservation_id` int  NOT NULL ,
    `user_id` int  NOT NULL ,
    `book_id` int  NOT NULL ,
    `date_reserved` varchar(50)  NOT NULL ,
    `status` varchar(50)  NOT NULL ,
    PRIMARY KEY (
        `reservation_id`
    )
);

CREATE TABLE `ratings` (
    `review_id` int  NOT NULL ,
    `user_id` int  NOT NULL ,
    `book_id` int  NOT NULL ,
    `rating` int  NOT NULL ,
    `review_text` varchar(50)  NOT NULL ,
    `date` varchar(50)  NOT NULL ,
    PRIMARY KEY (
        `review_id`
    )
);

CREATE TABLE `fine` (
    `fine_id` int  NOT NULL ,
    `user_id` int  NOT NULL ,
    `amount` int  NOT NULL ,
    `reason` varchar(50)  NOT NULL ,
    `date_issued` varchar(50)  NOT NULL ,
    `status` varchar(20)  NOT NULL ,
    PRIMARY KEY (
        `fine_id`
    )
);

